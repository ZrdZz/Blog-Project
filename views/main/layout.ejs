<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>博客</title>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
</head>
<body>
	<header>
		<img src="/images/timg1.jpg">
	</header>

	<nav>
		<div class = "menu">
			<% if(categoryId.category === undefined){ %>
				<a href="/" class="focus">首页</a>
			<% }else{ %>
				<a href="/">首页</a>
			<% } %>

			<% for(var category of data.categories){ %>
				<% if(categoryId.category == category._id){ %>
					<a href="/?category=<%= category._id %>" class="focus"> <%= category.name %> </a>
				<% }else{ %>
					<a href="/?category=<%= category._id %>"> <%= category.name %> </a>
				<% } %>
			<% } %>
		</div>
	</nav>
</body>
</html>