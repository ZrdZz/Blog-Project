<%- include('layout') %>

<ol class="breadcrumb">
  <li><a href="/admin">管理首页</a></li>
  <li><span>用户首页</span></li>
</ol>

<h3>用户信息</h3>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>用户名</th>
			<th>密码</th>
			<th>是否是管理员</th>
		</tr>
	</thead>
	<tbody>
		<% for(var user of users){ %>
			<tr>
				<td> <%= user._id %> </td>
				<td> <%= user.username %> </td>
				<td> <%= user.password %> </td>
				<td>
					<% if(user.isAdmin){ %>
						是
					<% }else{ %>
						否
					<% } %> 
				</td>
			</tr>
		<% } %>

	</tbody>
</table>

<%- include('page') %>