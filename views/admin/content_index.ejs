<%- include('layout') %>

<ol class="breadcrumb">
  <li><a href="/admin">管理首页</a></li>
  <li><span>内容列表</span></li>
</ol>

<h3>内容列表</h3>

<table class="table table-hover table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>分类名称</th>
			<th>内容标题</th>
			<th>作者</th>
			<th>创作时间</th>
			<th>阅读量</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>

		<% for(var content of contents){ %>
			<% var date = moment(content.addTime).format('YYYY-MM-DD HH:mm:ss') %>
			<tr>
				<td> <%= content._id %> </td>
				<td> <%= content.category.name %> </td>
				<td> <%= content.title %> </td>
				<td> <%= content.user.username %> </td>
				<td> <%= date %> </td>
				<td> <%= content.views %> </td>
				<td> <a href="/admin/content/edit?id=<%= content._id %>">修改</a> | 
				     <a href="/admin/content/delete?id=<%= content._id %>">删除</a></td>
			</tr>
		<% } %>

	</tbody>
</table>

<%- include('page') %>